[user]
	name = Wasif Malik
	email = wmalik@gmail.com
[github]
    user = wmalik
[core]
    editor = vim
    quotepath = false
	excludesfile = ~/.gitignore
[color]
    diff = auto
    status = auto
[color "diff"]
    whitespace = red reverse
[color "status"]
    added = green
    changed = blue bold
    untracked = red
[alias]
    s = status
    sb = status -sb
    aa = add -A
    br = branch
    ci = commit
    co = checkout
    df = diff
    ui = update-index
    unchange = update-index --assume-unchanged
    change = update-index --no-assume-unchanged
    dc = diff --cached
    last = log -1 HEAD
    lg = log --graph --decorate --pretty=format:'%C(blue)%h%Creset -%C(red)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    tree = log --graph --decorate --pretty=format:'%C(magenta)%h%Creset -%C(red)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    today = diff --stat @{12am}..HEAD
    total = !git log --pretty=oneline | wc -l
	d = difftool
    hub = !echo "https://github.com/`git config remote.origin.url`" | sed "s/git@github.com://g" | xargs chromium
    url =!sh -c 'HEAD=`git rev-parse HEAD` && SHA1=`[ "$0" = "sh" ] && echo $HEAD || echo $0` && echo `git hub`"/commit/"${SHA1i}'
[diff]
	tool = vimdiff
